@model Books.Models.Book
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@Model.Title</h4>
            <a asp-controller="Books" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light btn-sm text-primary">
                <i class="icofont-ui-edit"></i> Edit
            </a>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold text-secondary">Author:</div>
                <div class="col-md-9">@Model.Author</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold text-secondary">Category:</div>
                <div class="col-md-9">@Model.category?.Name</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold text-secondary">Description:</div>
                <div class="col-md-9">@Model.Description</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold text-secondary">Added On:</div>
                <div class="col-md-9">@Model.Addon.ToString("MMMM dd, yyyy")</div>
            </div>
        </div>
    </div>
</div>
